\n","    print(i,\" 4\",time.time() - start_time)\n","    final=pd.concat([final,EST])\n","\n","\n","driver.quit()\n","\n","final.columns = ['Book','Page','Grantor','Grantee','Doc Type','Property Address','Date']\n","\n","final.to_excel(\"file path\",sheet_name='sheet1')"]}]}